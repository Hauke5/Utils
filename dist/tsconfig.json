{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "target": "esnext",
    "allowJs": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/lib/utils":   ["@hauke5/utils/dist/lib/utils"],
      "@/lib/apps":    ["@hauke5/nextjs-utils/dist/lib/apps"],
      "@/lib/auth":    ["@hauke5/nextjs-utils/dist/lib/auth"],
      "@/lib/errors":  ["@hauke5/nextjs-utils/dist/lib/errors"],
      "@/lib/fileAPI": ["@hauke5/nextjs-utils/dist/lib/fileAPI"],
      "@/lib/hooks":   ["@hauke5/nextjs-utils/dist/lib/hooks"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
